{
  "name": "mini-express-server",
  "version": "1.0.1",
  "description": "A short implementation of a web server based in express architecture using build-in node modules",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "dev": "rm -rf ./build && tsc -p ./configs/tsconfig.cjs.json && tsc -p ./configs/tsconfig.esm.json && mv build/esm/index.js build/esm/index.mjs -w",
    "build:esm": "tsc -p ./configs/tsconfig.esm.json && mv build/esm/index.js build/esm/index.mjs",
    "build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
    "clean": "rm -rf ./build",
    "lint": "eslint --init",
    "test": "jest --detectOpenHandles",
    "coverage": "jest --coverage --detectOpenHandles"
  },
  "keywords": [
    "mini-express",
    "framework",
    "example"
  ],
  "author": "Jose Alejandro Concepcion Alvarez",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.16",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "eslint": "^8.33.0",
    "express": "^4.18.2",
    "helmet": "^6.0.1",
    "jest": "^29.4.1",
    "mini-express-server": "file:mini-express-server-1.0.0.tgz",
    "morgan": "^1.10.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./build/esm/types/index.d.ts",
        "default": "./build/esm/index.mjs"
      },
      "require": {
        "types": "./build/cjs/types/index.d.ts",
        "default": "./build/cjs/index.js"
      }
    }
  },
  "main": "./build/mini-express-server/index.js",
  "files": [
    "build/**/*"
  ]
}
